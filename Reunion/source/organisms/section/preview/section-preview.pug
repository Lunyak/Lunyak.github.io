include /molecules/list/preview/list-preview.pug

mixin section-preview(props= {info: false, className: '', attrs:{}})
  if props.info
    .section-preview(class= props.className || '')&attributes(props.attrs)
      if props.info.subtitle
        .section-preview__subtitle= props.info.subtitle
      if props.info.list
        +list-preview({info: props.info.list})